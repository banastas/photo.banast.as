# =============================================================================
# EXIF Photo Blog - Environment Variables Template
# =============================================================================
# Copy this file to .env.local for local development
# For production, set these in Cloudflare Pages dashboard

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Use Cloudflare D1 database (set to true for Cloudflare Pages)
USE_D1=true
CLOUDFLARE=true

# Or use PostgreSQL (for Vercel or other hosting)
# POSTGRES_URL=postgres://user:password@host:5432/database
# DISABLE_POSTGRES_SSL=0

# =============================================================================
# STORAGE CONFIGURATION (Choose one)
# =============================================================================

# Cloudflare R2 (Recommended for Cloudflare Pages)
NEXT_PUBLIC_STORAGE_PREFERENCE=cloudflare-r2
NEXT_PUBLIC_CLOUDFLARE_R2_BUCKET=photos
NEXT_PUBLIC_CLOUDFLARE_R2_ACCOUNT_ID=your_account_id_here
NEXT_PUBLIC_CLOUDFLARE_R2_PUBLIC_DOMAIN=pub-xxxxx.r2.dev
CLOUDFLARE_R2_ACCESS_KEY=your_access_key_here
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_secret_key_here

# Alternative: Vercel Blob
# BLOB_READ_WRITE_TOKEN=vercel_blob_rw_xxxxx

# Alternative: AWS S3
# NEXT_PUBLIC_STORAGE_PREFERENCE=aws-s3
# NEXT_PUBLIC_AWS_S3_BUCKET=your-bucket-name
# NEXT_PUBLIC_AWS_S3_REGION=us-east-1
# AWS_S3_ACCESS_KEY=your_access_key
# AWS_S3_SECRET_ACCESS_KEY=your_secret_key

# =============================================================================
# SITE CONFIGURATION
# =============================================================================

# Public site domain (used in OG images and navigation)
NEXT_PUBLIC_DOMAIN=photos.yourdomain.com

# Site metadata
NEXT_PUBLIC_META_TITLE=My Photo Blog
NEXT_PUBLIC_META_DESCRIPTION=A beautiful photography blog with EXIF data

# Navigation (optional)
# NEXT_PUBLIC_NAV_TITLE=My Photos
# NEXT_PUBLIC_NAV_CAPTION=Capturing moments

# About page content (optional, supports HTML tags)
# NEXT_PUBLIC_PAGE_ABOUT=Welcome to my photo blog. I love capturing <b>beautiful moments</b>.

# =============================================================================
# AUTHENTICATION
# =============================================================================

# Generate with: openssl rand -base64 32
AUTH_SECRET=your_generated_secret_here

# Admin credentials
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your_secure_password_here

# =============================================================================
# OPTIONAL: AI TEXT GENERATION
# =============================================================================

# OpenAI API key for auto-generating photo titles, captions, and descriptions
# OPENAI_SECRET_KEY=sk-xxxxx
# AI_TEXT_AUTO_GENERATED_FIELDS=title,tags,semantic
# OPENAI_BASE_URL=https://api.openai.com/v1

# =============================================================================
# OPTIONAL: LOCATION SERVICES
# =============================================================================

# Google Places API for location metadata
# GOOGLE_PLACES_API_KEY=your_google_api_key

# =============================================================================
# OPTIONAL: RATE LIMITING
# =============================================================================

# Upstash Redis for rate limiting AI/API requests
# EXIF_UPSTASH_REDIS_REST_URL=your_redis_url
# EXIF_UPSTASH_REDIS_REST_TOKEN=your_redis_token

# =============================================================================
# OPTIONAL: PERFORMANCE OPTIMIZATION
# =============================================================================

# Static generation (increases build time but improves performance)
# NEXT_PUBLIC_STATICALLY_OPTIMIZE_PHOTOS=1
# NEXT_PUBLIC_STATICALLY_OPTIMIZE_PHOTO_OG_IMAGES=1
# NEXT_PUBLIC_STATICALLY_OPTIMIZE_PHOTO_CATEGORIES=1
# NEXT_PUBLIC_STATICALLY_OPTIMIZE_PHOTO_CATEGORY_OG_IMAGES=1

# Image quality
# NEXT_PUBLIC_IMAGE_QUALITY=80
# NEXT_PUBLIC_PRESERVE_ORIGINAL_UPLOADS=1

# =============================================================================
# OPTIONAL: DISPLAY CUSTOMIZATION
# =============================================================================

# Theme
# NEXT_PUBLIC_DEFAULT_THEME=system  # Options: system, light, dark

# Grid layout
# NEXT_PUBLIC_GRID_HOMEPAGE=1
# NEXT_PUBLIC_GRID_ASPECT_RATIO=1.5
# NEXT_PUBLIC_SHOW_LARGE_THUMBNAILS=1

# Sorting
# NEXT_PUBLIC_DEFAULT_SORT=taken-at
# NEXT_PUBLIC_NAV_SORT_CONTROL=toggle
# NEXT_PUBLIC_SORT_BY_COLOR=1
# NEXT_PUBLIC_PRIORITY_BASED_SORTING=1

# Categories
# NEXT_PUBLIC_CATEGORY_VISIBILITY=recents,years,tags,cameras,lenses,recipes,films
# NEXT_PUBLIC_HIDE_CATEGORIES_ON_MOBILE=1
# NEXT_PUBLIC_HIDE_TAGS_WITH_ONE_PHOTO=1

# Photo display
# NEXT_PUBLIC_MATTE_PHOTOS=1
# NEXT_PUBLIC_MATTE_COLOR=#ffffff
# NEXT_PUBLIC_MATTE_COLOR_DARK=#000000

# Hide features
# NEXT_PUBLIC_HIDE_EXIF_DATA=1
# NEXT_PUBLIC_HIDE_KEYBOARD_SHORTCUT_TOOLTIPS=1
# NEXT_PUBLIC_HIDE_ZOOM_CONTROLS=1
# NEXT_PUBLIC_HIDE_TAKEN_AT_TIME=1
# NEXT_PUBLIC_HIDE_REPO_LINK=1
# NEXT_PUBLIC_BLUR_DISABLED=1

# =============================================================================
# OPTIONAL: PRIVACY & SECURITY
# =============================================================================

# Disable location data collection and display
# NEXT_PUBLIC_GEO_PRIVACY=1

# Enable public downloads
# NEXT_PUBLIC_ALLOW_PUBLIC_DOWNLOADS=1

# =============================================================================
# OPTIONAL: FEEDS & SOCIAL
# =============================================================================

# Enable RSS/JSON feeds
# NEXT_PUBLIC_SITE_FEEDS=1

# Social networks in share modal
# NEXT_PUBLIC_SOCIAL_NETWORKS=x,threads,facebook,linkedin

# OG image text alignment
# NEXT_PUBLIC_OG_TEXT_ALIGNMENT=BOTTOM

# =============================================================================
# OPTIONAL: INTERNATIONALIZATION
# =============================================================================

# Locale (default: en-us)
# NEXT_PUBLIC_LOCALE=en-us
# Options: bd-bn, en-gb, en-us, id-id, pt-br, pt-pt, tr-tr, zh-cn

# =============================================================================
# OPTIONAL: ANALYTICS & SCRIPTS
# =============================================================================

# External scripts (comma-separated HTTPS URLs)
# PAGE_SCRIPT_URLS=https://example.com/script.js
